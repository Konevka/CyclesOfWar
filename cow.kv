#:kivy 1.0.9

<MenuButton>:
    font_name: root.button_font
    font_size: '20sp'
#    text_size: self.size
    text_size: self.width - 40, self.height
    valign: 'middle'
    color: [0.8, 0.8, 0.8, 0.7]
    background_color: [0.5, 0.6, 0.5, 0.7]
    on_press: self.font_size = '21sp'
    on_release: self.font_size = '20sp'


<MainMenu>:
    orientation: 'vertical'
    padding: '20sp'
    spacing: '10sp'

    Label:
        font_name: root.title_font
        font_size: '30sp'
        text_size: self.size
        color: [0.8, 0.8, 0.8, 0.7]
        text: 'Cycles of War'

    MenuButton:
        id: play_button
        text: 'Play'
#        Image:
#            source: 'kivy.png'
#            y: self.parent.y + self.parent.height - 250
#            x: self.parent.x
#            size: 250, 250
#            allow_stretch: True

    MenuButton:
        id: settings_button
        text: 'Settings'

    MenuButton:
        id: quit_button
        text: 'Quit'
        on_press: app.stop()

<CoWGame>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "textures/futurama0.jpeg"
    FloatLayout:
        canvas:
    MainMenu:
        pos: '50sp', '50sp'
        size: '500sp', '300sp'