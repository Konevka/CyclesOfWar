            SettingsToggle:
                id: 'universe_size7'
                text: '7.5'
                group: 'universe_size'
            SettingsToggle:
                id: 'universe_size10'
                text: '10.0'
                group: 'universe_size'


    BoxLayout:
        orientation: 'horizontal'
        SettingsLabel:
            text: 'Rendering Theme'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 0.7
            SettingsToggle:
                id: 'theme1'
                text: 'Clear'
                group: 'theme'
            SettingsToggle:
                id: 'theme2'
                text: 'Asteroid'
                group: 'theme'
            SettingsToggle:
                id: 'theme3'
                text: 'Galaxy'
                group: 'theme'
            SettingsToggle:
                id: 'theme4'
