    MenuButton:
        id: back_button
        text: 'Back'
        on_release: app.root.current = 'menu'

<SettingsScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "textures/futurama0.jpeg"
    SettingsMenu:
        pos: root.width/50, root.height/5
        size_hint: (0.96, 0.6)